<div id="app">
    <input type="date" v-model="desde">
    <input type="date" v-model="hasta">
    <button @@click="buscar">Buscar</button>

    <table>
        <tr v-for="p in pedidos">
            <td>{{ p.idPedido }}</td>
            <td>{{ p.fecha }}</td>
            <td>{{ p.monto }}</td>
            <td>{{ p.estado }}</td>
        </tr>
    </table>

    <button @@click="prev" :disabled="page==1">◀</button>
    <span>{{ page }}</span>
    <button @@click="next">▶</button>
</div>
