<h2> Mis platillos</h2>

<a asp-action="Crear" class="btn btn-primary mb-3">
    Crear platillo
</a>

<div id="app">

<table class="table table-striped">
    <thead>
        <tr>
            <th>Imagen</th>
            <th>Nombre</th>
            <th>Costo</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <tr v-for="p in platos" :key="p.idPlato">
            <td>
                <img
                    v-bind:src="p.imagen ? p.imagen : '/img/default-plato.png'"
                    width="80" />

            </td>
            <td>{{ p.nombre }}</td>
            <td>{{ p.costo }}</td>
            <td>
                <a 
                v-bind:href="`/Plato/Detalle/${p.idPlato}`"
                class="btn btn-info btn-sm">
                Detalles
                </a>

                <a 
                v-bind:href="`/Plato/Editar/${p.idPlato}`"
                class="btn btn-warning btn-sm">
                Editar
                </a>

                <a 
                href="#"
                class="btn btn-danger btn-sm"
                v-on:click.prevent="confirmarBaja(p.idPlato)">
                Eliminar
                </a>
            </td>
        </tr>
    </tbody>
</table>

 <!-- PAGINADO NUMERADO (ACÁ VA) -->
    <nav class="d-flex justify-content-center mt-3">
        <ul class="pagination">

            <li class="page-item" v-bind:class="{ disabled: page === 1 }">
                <a class="page-link"
                   href="#"
                   v-on:click.prevent="prevPage">
                    «
                </a>
            </li>

            <li class="page-item"
                v-for="n in totalPages"
                :key="n"
                v-bind:class="{ active: n === page }">
                <a class="page-link"
                   href="#"
                   v-on:click.prevent="irAPagina(n)">
                    {{ n }}
                </a>
            </li>

            <li class="page-item"
                v-bind:class="{ disabled: page === totalPages }">
                <a class="page-link"
                   href="#"
                   v-on:click.prevent="nextPage">
                    »
                </a>
            </li>

        </ul>
    </nav>
    </div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/vue@2/dist/vue.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="~/js/plates.js"></script>
}

