<h2> Mis platillos</h2>

<a asp-action="Crear" class="btn btn-primary mb-3">
    Crear platillo
</a>

<div id="app">

   <div class="mb-3">

    <button class="btn btn-outline-secondary"
            data-bs-toggle="collapse"
            data-bs-target="#panelFiltros">
             Filtros
    </button>

    <div id="panelFiltros" class="collapse mt-3">
        <div class="card card-body">

            <div class="row g-2">

                <div class="col-md-4">
                    <input type="text"
                           class="form-control"
                           placeholder="Buscar por nombre"
                           v-model="filtroNombre">
                </div>

                <div class="col-md-4">
                    <input type="text"
                           class="form-control"
                           placeholder="Ingredientes (ej: pollo, queso)"
                           v-model="filtroIngredientes">
                </div>

                <div class="col-md-2">
                    <input type="number"
                           class="form-control"
                           placeholder="Costo máx"
                           v-model="filtroCostoMax">
                </div>

                <div class="col-md-2 d-grid">
                    <button class="btn btn-primary"
                            v-on:click="buscar">
                        Aplicar
                    </button>
                </div>

            </div>

        </div>
    </div>

</div>


<table class="table table-striped">
    <thead>
        <tr>
            <th>Imagen</th>
            <th>Nombre</th>
            <th>Costo</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <tr v-for="p in platos" :key="p.idPlato" :class="{ 'table-danger': platoAEliminar === p.idPlato}">
            <td>
                <img
                    v-bind:src="p.imagen ? p.imagen : '/img/default-plato.png'"
                    width="80" />

            </td>
            <td>{{ p.nombre }}</td>
            <td>{{ p.costo }}</td>

            <td>
    <template v-if="platoAEliminar === p.idPlato">
        <button class="btn btn-danger btn-sm"
                v-on:click="confirmarBaja(p)">
            Confirmar
        </button>
        <button class="btn btn-secondary btn-sm"
                v-on:click="cancelarBaja">
            Cancelar
        </button>
    </template>

    <template v-else>
        <a :href="`/Plato/Detalle/${p.idPlato}`"
           class="btn btn-info btn-sm">
           Detalles
        </a>

        <a :href="`/Plato/Editar/${p.idPlato}`"
           class="btn btn-warning btn-sm">
           Editar
        </a>

        <button class="btn btn-danger btn-sm"
                v-on:click="pedirConfirmacion(p)">
            Eliminar
        </button>
    </template>
</td>

        </tr>
    </tbody>
</table>

 <!-- PAGINADO NUMERADO (ACÁ VA) -->
    <nav class="d-flex justify-content-center mt-3">
        <ul class="pagination">

            <li class="page-item" v-bind:class="{ disabled: page === 1 }">
                <a class="page-link"
                   href="#"
                   v-on:click.prevent="prevPage">
                    «
                </a>
            </li>

            <li class="page-item"
                v-for="n in totalPages"
                :key="n"
                v-bind:class="{ active: n === page }">
                <a class="page-link"
                   href="#"
                   v-on:click.prevent="irAPagina(n)">
                    {{ n }}
                </a>
            </li>

            <li class="page-item"
                v-bind:class="{ disabled: page === totalPages }">
                <a class="page-link"
                   href="#"
                   v-on:click.prevent="nextPage">
                    »
                </a>
            </li>

        </ul>
    </nav>
    </div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/vue@2/dist/vue.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="~/js/plates.js"></script>
}

