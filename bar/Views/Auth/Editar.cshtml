@model Bar.Models.Usuario

<div class="registro-wrapper">
    <div class="registro-card">

        <h2>Editar Perfil</h2>

        <form asp-action="Editar"
              method="post"
              enctype="multipart/form-data">

            <input type="hidden" asp-for="IdUsuario" />

            <div asp-validation-summary="All" class="validation-summary"></div>

            <div class="avatar-preview">
                <img src="@(string.IsNullOrEmpty(Model.Avatar)
                            ? "/img/default-avatar.png"
                            : Model.Avatar)"
                     class="avatar-img" />
            </div>

            <label>Cambiar avatar</label>
            <input type="file"
                   name="avatar"
                   accept="image/*" />
            <span asp-validation-for="Avatar"></span>

            <input asp-for="Nombre" placeholder="Nombre" />
            <span asp-validation-for="Nombre"></span>

            <input asp-for="Apellido" placeholder="Apellido" />
            <span asp-validation-for="Apellido"></span>

            <input asp-for="Nick" placeholder="Nick" />
            <span asp-validation-for="Nick"></span>

            <input asp-for="Email" placeholder="Email" />
            <span asp-validation-for="Email"></span>

            <input asp-for="Domicilio" placeholder="Domicilio" />
            <span asp-validation-for="Domicilio"></span>

            <input asp-for="Telefono" placeholder="TelÃ©fono" />
            <span asp-validation-for="Telefono"></span>

            <div class="button-group">
                <button type="submit">Guardar cambios</button>

                <a asp-action="Perfil" class="btn-cancel">
                    Cancelar
                </a>
            </div>

        </form>

    </div>
</div>
