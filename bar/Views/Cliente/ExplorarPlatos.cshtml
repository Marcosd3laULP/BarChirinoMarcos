<div id="appClient" class="container">

    <div class="mb-3">

    <button class="btn btn-outline-secondary"
            data-bs-toggle="collapse"
            data-bs-target="#panelFiltros">
             Filtros
    </button>

    <div id="panelFiltros" class="collapse mt-3">
        <div class="card card-body">

            <div class="row g-2">

                <div class="col-md-4">
                    <input type="text"
                           class="form-control"
                           placeholder="Buscar por nombre"
                           v-model="filtroNombre">
                </div>

                <div class="col-md-4">
                    <input type="text"
                           class="form-control"
                           placeholder="Ingredientes (ej: pollo, queso)"
                           v-model="filtroIngredientes">
                </div>

                <div class="col-md-2">
                    <input type="number"
                           class="form-control"
                           placeholder="Costo máx"
                           v-model="filtroCostoMax">
                </div>

                <div class="col-md-2 d-grid">
                    <button class="btn btn-primary"
                            v-on:click="buscar">
                        Aplicar
                    </button>
                </div>

            </div>

        </div>
    </div>

</div>

<div class="row g-4 mt-3">

        <div class="col-md-4"
             v-for="p in platos"
             :key="p.idPlato">

            <div class="card h-100 shadow-sm plato-card"
                 v-on:click="verDetalle(p.idPlato)"
                 style="cursor:pointer">

                <img class="card-img-top"
                     :src="p.imagen ? p.imagen : '/img/default-plato.png'"
                     style="height:220px; object-fit:cover;" />

                <div class="card-body text-center">
                    <h5 class="card-title">
                        {{ p.nombre }}
                    </h5>

                    <p class="card-text fw-bold text-success">
                        $ {{ p.costo }}
                    </p>
                </div>

            </div>
        </div>

    </div>

    <!-- PAGINADO -->
    <div class="d-flex justify-content-center align-items-center gap-2 mt-4">

        <button class="btn btn-secondary"
                v-on:click="prevPage"
                :disabled="page === 1">
            Anterior
        </button>

        <span>
            Página {{ page }} de {{ totalPages }}
        </span>

        <button class="btn btn-secondary"
                v-on:click="nextPage"
                :disabled="page === totalPages">
            Siguiente
        </button>

    </div>

</div>
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/vue@2/dist/vue.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="~/js/plates-public.js"></script>
}
